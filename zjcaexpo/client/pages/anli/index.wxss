page{
  height: 100%;
}
.detail-container{
  display: flex;
  height: 100%;
  flex-direction: column;
}
.detail-img{
  width: 100%;
  height: 400rpx;
}
.detail-title{
  text-indent: 1em;
  margin-top:10rpx;
  font-size:35rpx;
  padding: 0 20rpx;
  font-weight: 700;
}
.detail-info{
  text-indent: 2em;
  font-size: 28rpx;
  padding: 0 20rpx;
}
.footer{
  display: flex;
  flex-direction: row;
  font-size: 24rpx;
  margin-top:50rpx;
  width: 80%;
  align-self: center;
  bottom: 20rpx;
  position: fixed;
}
.company{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: -40rpx;
  text-align:center;

}
.logo{
  width:20%;
  height:45px
}
.company-name-en{
  align-self: center;
}